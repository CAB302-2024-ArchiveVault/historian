<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="15.0" fillWidth="false" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.historian.HomepageController">
    <Label text="Welcome to Historian"/>
    <HBox alignment="CENTER" spacing="15.0" >
        <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button fx:id="databaseButton" text="Database" onAction="#onDatabaseButtonClick"/>
    </HBox>
    <VBox alignment="CENTER" spacing="15.0" fillWidth="false">
        <GridPane hgap="5.0" vgap="5.0" >
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>

        <Text fx:id="errorText" visible="false" style="-fx-fill: red;" />

        <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick"/>
    </VBox>
</VBox>