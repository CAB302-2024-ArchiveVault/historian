<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.TextField?>
<VBox alignment="TOP_CENTER" fillWidth="false" spacing="15.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.historian.IndividualPhoto">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Pane fx:id="imagePane">
        <ImageView fx:id="imageDisplay" fitHeight="491.0" fitWidth="436.0" pickOnBounds="true" preserveRatio="true" />
    </Pane>
    <HBox fx:id="editOptionsHBox" alignment="CENTER" spacing="15.0">
        <DatePicker fx:id="myDatePicker" onAction="#getDate" promptText="Date" />
        <Button fx:id="locationButton" text="location" />
        <Button fx:id="tagButton" text="Tag" onAction="#onTagButtonClick"/>
        <Button fx:id="finishButton" text="Finish" onAction="#onfinishButtonClick" />
        <Button fx:id="backButton" onAction="#onBackButtonClick" text="Back" />
    </HBox>
    <HBox fx:id="tagOptionsHBox" alignment="CENTER" spacing="15.0" visible="false">
        <TextField fx:id="firstNameTextField" text="" maxWidth="100"/>
        <TextField fx:id="lastNameTextField" text="" maxWidth="100"/>
        <Button fx:id="tagSaveButton" text="Save" onAction="#onTagSaveButtonClick"/>
        <Button fx:id="tagCancelButton" text="Cancel" onAction="#onTagCancelButtonClick"/>
    </HBox>
   <Label fx:id="date" text="Label" />

</VBox>
