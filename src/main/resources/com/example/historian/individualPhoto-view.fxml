<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" fillWidth="false" spacing="15.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.historian.IndividualPhoto">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Pane fx:id="imagePane">
        <ImageView fx:id="imageDisplay" fitHeight="491.0" fitWidth="436.0" pickOnBounds="true" preserveRatio="true" />
    </Pane>
    <HBox fx:id="editOptionsHBox" alignment="CENTER" prefHeight="30.0" prefWidth="429.0" spacing="15.0">
        <DatePicker fx:id="myDatePicker" managed="false" onAction="#getDate" promptText="Date" visible="false" />
        <TextField fx:id="locationTextField" managed="false" prefHeight="26.0" prefWidth="64.0" promptText="Location" visible="false" />
        <Button fx:id="tagButton" managed="false" onAction="#onTagButtonClick" text="Tag" visible="false" />
        <Button fx:id="saveButton" managed="false" onAction="#onSaveButtonClick" text="Save" visible="false" />
        <Button fx:id="editButton" onAction="#onEditButtonClick" text="Edit" />
        <Button fx:id="backButton" onAction="#onBackButtonClick" text="Back" />
        <Button fx:id="cancelButton" managed="false" onAction="#onCancelButtonClick" text="Cancel" visible="false" />
    </HBox>
    <HBox fx:id="tagOptionsHBox" alignment="CENTER" managed="false" spacing="15.0" visible="false">
        <TextField fx:id="firstNameTextField" maxWidth="100" text="" />
        <TextField fx:id="lastNameTextField" maxWidth="100" text="" />
        <Button fx:id="tagSaveButton" onAction="#onTagSaveButtonClick" text="Save" />
        <Button fx:id="tagCancelButton" onAction="#onTagCancelButtonClick" text="Cancel" />
    </HBox>
    <HBox fx:id="tagModeHBox" alignment="CENTER" managed="false" spacing="15.0" visible="false">
        <Label text="Click a person on the image to tag." />
        <Button fx:id="tagBackButton" onAction="#onTagBackButtonClick" text="Back" />
    </HBox>
   <HBox prefHeight="27.0" prefWidth="108.0">
      <children>
           <TextField fx:id="descriptionTextField1" alignment="CENTER" managed="false" prefHeight="24.0" prefWidth="210.0" promptText="Add description" visible="false" />
      </children>
   </HBox>
    <HBox alignment="CENTER" spacing="15.0">
        <Label fx:id="dateLabel" />
        <Label fx:id="tagsLabel" />
        <Label fx:id="locationLabel" />
        <Label fx:id="descriptionLabel" />
    </HBox>
    <Button fx:id="deleteButton" managed="false" onAction="#deletePhoto" text="Delete Photo" visible="false" />

</VBox>
