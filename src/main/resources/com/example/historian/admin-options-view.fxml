<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="15.0" fillWidth="false" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.historian.AdminOptionsController">
    <Label text="Select An Option"/>
    <HBox alignment="CENTER" spacing="15.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button fx:id="databaseManagementButton" text="Database Management" onAction="#onDatabaseManagementClick"/>
        <Button fx:id="galleriesButton" text="Galleries" onAction="#onGalleriesClick"/>
    </HBox>
    <HBox spacing="10.0" alignment="BOTTOM_CENTER">
        <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutClick"/>
    </HBox>
</VBox>
