<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="15.0" fillWidth="false" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.historian.DatabaseController">
    <Label text="Database Management"/>
    <HBox alignment="CENTER" spacing="15.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button fx:id="accountManagementButton" text="Account Management" onAction="#onAccountManagementClick"/>
        <Button fx:id="auditLogButton" text="Audit Log" onAction="#onAuditLogClick"/>
    </HBox>
    <HBox alignment="CENTER" spacing="15.0" >
        <Button fx:id="deleteDatabaseButton" text="Delete Database" onAction="#onDeleteDatabaseClick"/>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
    <HBox spacing="10.0" alignment="BOTTOM_CENTER">
        <Button fx:id="exitButton" text="Exit" onAction="#onExitButtonClick"/>
    </HBox>
</VBox>
